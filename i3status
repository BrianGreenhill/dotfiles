general {
    interval = 1
    colors = true
    color_good = '#88b090'
    color_degraded = '#ccdc90'
    color_bad = '#e89393'
}

order += "volume master"
order += "wireless wlp58s0"
order += "ethernet enp57s0u1u2"
order += "path_exists VPN"
order += "battery 0"
